
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div>
        
        <h2>Teacher Information</h2>

        @if (ViewBag.Message != null)
        {
            @ViewBag.Message

        }
        <form id="saveTeacherForm" method="POST">
            <table>
                <tr>
                    <td>
                        <label for="Name">Name</label>
                    </td>
                    <td>
                        <input type="text" id="Name" name="Name" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="Address">Address</label>
                    </td>
                    <td>
                        <textarea id="Address" name="Address"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="Email">Email</label>
                    </td>
                    <td>
                        <input type="text" id="Email" name="Email" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="Contact">Contact</label>
                    </td>
                    <td>
                        <input type="text" id="Contact" name="Contact" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="DesignationId">Designation</label>
                    </td>
                    <td>
                        <select id="DesignationId" name="DesignationId">
                            <option value="">Select....</option>
                            @foreach (var designation in ViewBag.Designations)
                            {
                                <option value="@designation.Id">@designation.Title</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="DepartmentId">Department</label>
                    </td>
                    <td>
                        <select id="DepartmentId" name="DepartmentId">
                            <option value="">Select....</option>
                            @foreach (var dept in ViewBag.Departments)
                            {
                                <option value="@dept.Id">@dept.Name</option>
                            }
                        </select>

                    </td>

                </tr>
                <tr>
                    <td>
                        <label for="CreditTobeTaken">Credit To be Taken</label>
                    </td>
                    <td>
                        <input type="text" id="CreditTobeTaken" name="CreditTobeTaken" />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Save" />
                    </td>
                </tr>
            </table>
        </form>


        <div>
            @Html.ActionLink("Back", "Index")
        </div> 
    </div>
    @section scripts{
    <script src="~/Scripts/jquery-2.2.0.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        
<script>
    $(document).ready(function () {
        $("#saveTeacherForm").validate({
            rules: {
                Name: "required",
                Email: {
                    required: true,
                    email: true
                },
                Contact: "required",
                CreditTobeTaken:
                {
                    required: true,
                    number: true,
                    range: [0, 500]
                },
                Address: "required",
                DesignationId: "required",
                DepartmentId: "required"

            },
            messages: {
                Name: "Please enter the  Name",
                Email: {
                    required: "Please email address is required",
                    email: "Please enter a correct email address"
                },
                Contact: "Please enter the  contact",
                CreditTobeTaken: {
                    required: "Credit is required!",
                    number: "Please enter numeric figure only!",
                    range: "Enter a positive number"
                },
                Address: "Address is required!",
                DesignationId: "Designation is required!",
                DepartmentId: "Please select department"
            }
        });
    });
</script>


   

}